@model WebProject.Models.Events

@{
    ViewBag.Title = "CreateEvent";
}
<link href="~/Custom/OrganizerLayout.css" rel="stylesheet" />
<h2 class="h2_heading">Create Event</h2>

@using (Html.BeginForm("CreateEvent", "Organizer", FormMethod.Post))
{
    <div class="container rounded py-4" style="background-color: rgba(229, 110, 149, 0.7)">
        <form>
            <h3>Event details</h3>

            <div class="form-group row">
                <label for="event-name" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="event-name" name="Event_Name">
                </div>
            </div>

            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-4 pt-0">Visible</legend>
                    <div class="form-check">
                        <input id="activeInput" type="checkbox" name="Event_Active" />
                    </div>
                </div>
            </fieldset>

            <div class="form-group row">
                <label for="arrangerInput" class="col-sm-4 col-form-label">Organizer ID</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="arrangerInput" name="OrganizerID" required value="2">
                </div>
            </div>

            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-4 pt-0">Seeking Volunteers</legend>
                    <div class="form-check">
                        <input id="volunteersInput" type="checkbox" name="Event_Seeking_Volunteers" value="true" />
                    </div>
                </div>
            </fieldset>

            <div class="form-group row">
                <label for="locationInput" class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    @Html.DropDownList("Category_Id", (IEnumerable<SelectListItem>)ViewBag.Category_Id)
                </div>
            </div>

            <div class="form-group row">
                <label for="locationInput" class="col-sm-4 col-form-label">Location ID</label>
                <div class="col-sm-8">
                    @Html.DropDownList("FacilityID", (IEnumerable<SelectListItem>)ViewBag.FacilityID)
                </div>
            </div>

            <div class="form-group row">
                <label for="description" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" id="description" name="Event_Name" rows="5"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label for="priceInput" class="col-sm-4 col-form-label">Ticket Price</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="priceInput" name="Event_Ticket_Price" value="0" required>
                </div>
            </div>

            <div class="form-group row">
                <label for="start-time" class="col-sm-4 col-form-label">Start Time</label>
                <div class="col-sm-8">
                    <input id="start-time" type="datetime-local" class="form-control" name="Event_Start_Datetime">
                </div>
            </div>

            <div class="form-group row">
                <label for="end-time" class="col-sm-4 col-form-label">End Time</label>
                <div class="col-sm-8">
                    <input id="end-time" type="datetime-local" class="form-control" name="Event_End_Datetime">
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <button class="btn btn-success btn-lg">Create Event</button>
            </div>
        </form>
    </div>
}