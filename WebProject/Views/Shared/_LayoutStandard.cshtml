<!DOCTYPE html>
<html>
<head>
    <!--DEFAULT-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Interface</title>

    <!--FONTS-->
    <link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e5c3891ab7.js" crossorigin="anonymous"></script>

    <!--BOOTSTRAP-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!--CUSTOM CSS-->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Shared files/CSS/Monitoring.css" rel="stylesheet" />
    <link href="~/Shared files/CSS/Organiser.css" rel="stylesheet" />
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            @{
                if (Session["user"] != null && Session["user"].ToString() == "admin") // för admin
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @*<li class="li_nav"><a class="active" href="#home">Home</a></li>*@

                            @Html.ActionLink("Organiser", "Index", "Organiser", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("AdminFacility", "Index", "AdminFacility", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("AdminOrganizer", "Index", "AdminOrganizer", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("AdminPlace", "Index", "AdminPlace", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("Monitoring", "Monitoring", "Monitoring", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                        </ul>
                    </div>

                }
                else if (Session["user"] != null && Session["user"].ToString() == "normal") // för arrangör
                {

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @*<li class="li_nav"><a class="active" href="#home">Home</a></li>*@

                            @Html.ActionLink("Organiser", "Index", "Organiser", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("My Events", "myEvents", "Organiser", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("Create Event", "CreateEvent", "Organiser", new { area = "" }, new { @class = "nav-link" })
                            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                        </ul>
                    </div>
                }
                else
                {
                    @*@Html.ActionLink("Login", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                }
            }
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Event - Places and Facilities</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script><script>
    function myFunction() {
        var input, filter, ul, li, a, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        ul = document.getElementById("myUL");
        li = ul.getElementsByTagName("li");
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("a")[0];
            txtValue = a.textContent || a.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }
</script>
</body>
</html>