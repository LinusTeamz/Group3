@model WebProject.Models.ViewModel
@{
    ViewBag.Title = "Monitoring";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Monitoring</h2>

@{ 
    int counter = 1;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Active</th>
        </tr>
    </thead>
    <thead>
        @foreach (var item in Model.monitorList)
        {
        <tr>
            <td>@counter</td>
            <td>@item.Adress</td>
            <td>@item.Ping</td>
        </tr>

            counter++;

        }
    </thead>
</table>
<br />
<p>Amount of sites running: @ViewBag.Message1</p>