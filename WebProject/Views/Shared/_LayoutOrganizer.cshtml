<!DOCTYPE html>

<html>
<head>
    <!--DEFAULT-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!--FONTS-->
    <link href="https://fonts.googleapis.com/css2?family=Arvo:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e5c3891ab7.js" crossorigin="anonymous"></script>

    <!--BOOTSTRAP-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!--STYLES-->
    <link href="~/Custom/OrganizerLayout.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
        <div class="container">
            @*@Html.ActionLink("EVENT", "Index", "Admin", null, new { @class = "navbar-brand" })*@
            <a href="http://193.10.202.82/Events" class="navbar-brand">EVENT</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Hem", "Index", "Organizer", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Skapa Event", "CreateEvent", "Organizer", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Mina Event", "MyEvent", "Organizer", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        <a href="http://193.10.202.77/EventAdmin" class="nav-link active">Event</a>
                    </li>
                    <li class="nav-item">
                        <a href="http://193.10.202.81/Bookingadmin" class="nav-link active">Bokningar</a>
                    </li>
                </ul>
                <div>
                    @Html.ActionLink("Logga Ut", "Logout", "Home", null, new { @class = "btn btn-danger active" })
                </div>
            </div>
        </div>
    </nav>
    <div class="container my-5">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function myFunction() {
            var input, filter, ul, li, a, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            ul = document.getElementById("myUL");
            li = ul.getElementsByTagName("li");
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByTagName("a")[0];
                txtValue = a.textContent || a.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    li[i].style.display = "";
                } else {
                    li[i].style.display = "none";
                }
            }
        }
    </script>
    <script>
        $(document).ready(function () {
            $("#eventFilter").on("keyup", function () {
                let value = $(this).val().toLowerCase();
                $(".card-container").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</body>
</html>
