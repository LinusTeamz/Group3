@model WebProject.Models.Events

@{
    ViewBag.Title = "Skapa Event";
}
<link href="~/Custom/OrganizerLayout.css" rel="stylesheet" />
<h2 class="text-center">Här kan du skapa event</h2>

@using (Html.BeginForm("CreateEvent", "Organizer", FormMethod.Post))
{
    <div class="container rounded py-4 mb-5 form">
        <form>
            <h3>Detaljer</h3>

            <div class="form-group row">
                <label for="event-name" class="col-sm-4 col-form-label">Namn</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="event-name" name="Event_Name" autocomplete="off">
                </div>
            </div>

            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-4 pt-0">Synlig</legend>
                    <div class="form-check">
                        <input id="activeInput" type="checkbox" name="Event_Active" />
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-4 pt-0">Söker volontärer</legend>
                    <div class="form-check">
                        <input id="volunteersInput" type="checkbox" name="Event_Seeking_Volunteers" value="true" />
                    </div>
                </div>
            </fieldset>

            <div class="form-group row">
                <label for="locationInput" class="col-sm-4 col-form-label">Kategori</label>
                <div class="col-sm-8">
                    @Html.DropDownList("Category_Id", (IEnumerable<SelectListItem>)ViewBag.Category_Id, null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label for="locationInput" class="col-sm-4 col-form-label">Lokal-ID</label>
                <div class="col-sm-8">
                    @Html.DropDownList("FacilityID", (IEnumerable<SelectListItem>)ViewBag.FacilityID, null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label for="description" class="col-sm-4 col-form-label">Beskrivning</label>
                <div class="col-sm-8">
                    <textarea class="form-control" id="description" name="Event_Description" rows="5"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label for="priceInput" class="col-sm-4 col-form-label">Biljettpris</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="priceInput" name="Event_Ticket_Price" value="0" required>
                </div>
            </div>

            <div class="form-group row">
                <label for="start-time" class="col-sm-4 col-form-label">Starttid</label>
                <div class="col-sm-8">
                    <input id="start-time" type="datetime-local" class="form-control" name="Event_Start_Datetime">
                </div>
            </div>

            <div class="form-group row">
                <label for="end-time" class="col-sm-4 col-form-label">Sluttid</label>
                <div class="col-sm-8">
                    <input id="end-time" type="datetime-local" class="form-control" name="Event_End_Datetime">
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <button class="btn btn-primary btn-lg">Skapa Event</button>
            </div>
        </form>
    </div>
}